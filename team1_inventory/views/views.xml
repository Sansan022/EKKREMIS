<odoo>
  <data>


<!-- Operations hide fields and rename fields -->
  <record id="stock_view_picking_form" model="ir.ui.view">
    <field name="name">stock.picking.view.form.inherit</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">

      <field name="move_type" position="attributes">
        <attribute name="invisible">True</attribute>
      </field>

      <field name="group_id" position="attributes">
        <attribute name="invisible">True</attribute>
      </field>
      <field name="priority" position="attributes">
        <attribute name="invisible">True</attribute>
      </field>
     
      <field name="partner_id" position="attributes">
        <attribute name="string">Subscriber</attribute>
      </field>


      <field name="min_date" position="attributes">
        <attribute name="string">Service Date</attribute>
      </field>

    </field>
  </record>


<!-- Inventory Control/ Product hide fields and smart buttons -->
  <record id="product_template_form_view" model="ir.ui.view">
    <field name="name">product.template.view.form.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">

      <field name="sale_ok" position="attributes">
        <attribute name="invisible">True</attribute>
      </field>

      <label for="sale_ok" position="attributes">
        <attribute name="invisible">1</attribute>
      </label>

      
      <field name="purchase_ok" position="attributes">
        <attribute name="invisible">True</attribute>
      </field>

      <label for="purchase_ok" position="attributes">
        <attribute name="invisible">1</attribute>
      </label>
     
           
      <field name="can_be_expensed" position="attributes">
        <attribute name="invisible">True</attribute>
      </field>

      <label for="can_be_expensed" position="attributes">
        <attribute name="invisible">1</attribute>
      </label>
     
      <xpath expr="//button[@name='action_view_orderpoints']" position="attributes">
        <attribute name="invisible">1</attribute>
     </xpath>
   
    <xpath expr="//button[@name='action_view_sales']" position="attributes">
          <attribute name="invisible">1</attribute>
      </xpath>   


      


      <field name="list_price" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
     


      <field name="standard_price" position="attributes">
        <attribute name="invisible">1</attribute>
      </field>
     
      <label for="standard_price" position="attributes">
        <attribute name="invisible">1</attribute>
      </label>
     


     

    </field>
  </record>  

<!-- Inventory Control/ Product - hide notebook page -->
   <record id="p_template_form_view" model="ir.ui.view">
      <field name="name">product.template.procurement.stat.button.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
  
          <page name="sales" position='attributes'>
              <attribute name="invisible">1</attribute>
          </page>
          <page name="notes" position='attributes'>
              <attribute name="invisible">1</attribute>
          </page>
          <page name="invoicing" position='attributes'>
              <attribute name="invisible">1</attribute>
          </page>

      

      </field>

  </record>


  <record id="view_2323" model="ir.ui.view">
      <field name="name">product.template.tem.stat.button.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="stock.view_template_property_form" />
      <field name="arch" type="xml">
  
           <page name="general_information" position="attributes">
             <attribute name="invisible">1</attribute>
          </page>

          
      </field>
  </record>


<!-- Inventory Control/ Product - hide notebook page -->
  <record id="product_template_procurement_stat_button_inherit" model="ir.ui.view">
      <field name="name">product.template.procurement.stat.button.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="procurement.product_template_view_form_procurement_button" />
      <field name="arch" type="xml">
  
      <xpath expr="//button[@name='296']" position="attributes">
          <attribute name="invisible">1</attribute>
      </xpath>  

      <xpath expr="//button[@name='892']" position="attributes">
          <attribute name="invisible">1</attribute>
      </xpath>   

      </field>
  </record>














